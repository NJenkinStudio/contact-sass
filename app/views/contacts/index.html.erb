<div class="container header-index">
  <div class="jumbotron text-center text-white shadow-sm">
    <div class="container header-space">
      <h1 class="display-3 contact-head">4 Your Contacts</h1>
      <hr class="my-1">
      <% if user_signed_in? %>
      <%= link_to 'New Contact', new_contact_path, class: "btn btn-outline-secondary btn-sm" %>
      <% else %>
      <%= link_to 'Login', new_user_session_path, class: "btn btn-outline-secondary btn-sm" %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <table class="table table-hover shadow-sm">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Last Name:</th>
        <th scope="col">First Name:</th>
        <th scope="col">Number:</th>
        <th scope="col">Actions:</th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <th scope="row"><%= contact.last_name %></th>
          <td><%= contact.first_name %></td>
          <td><%= contact.number %></td>
          <td><%= link_to 'View', contact_path(contact), 
                                    class: "btn btn-outline-success btn-sm" %>
              <%= link_to 'Edit', edit_contact_path(contact), 
                                    class: "btn btn-outline-warning btn-sm" %>
              <%= link_to 'Delete', contact_path(contact),
                                    class: "btn btn-outline-danger btn-sm", method: :delete, 
                                    data: {confirm: "Do you wish to delete #{contact.first_name}?"}%></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>