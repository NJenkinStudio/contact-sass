<div class="row">
  <div class="col-sm-6">
    <div class="card shadow-lg" style="width: 30rem; height: 13rem;">
    <%= image_tag("four.jpg", class: "card-img contact-back") %>
      <div class="card-img-overlay">
        <div class="card-body text-white">
          <h5 class="card-title text-center"><%= @contact.full_name %></h5>
          <h6 class="card-subtitle mb-2 font-weight-normal">Phone number: <%= @contact.number%></h6>
          <h6 class="card-subtitle mb-2 font-weight-normal">Birthday: <%= @contact.birthday%></h6>
          <h6 class="card-subtitle mb-2 font-weight-normal">Email: <%= @contact.email%></h6>
          <h6 class="card-subtitle mb-2 font-weight-normal">Address: <% @contact.addresses.each do |address| %>
                                                                    <%= address.address1 %>
                                                                    <%= address.address2 %>,
                                                                    <%= address.city %>,
                                                                    <%= address.state %>
                                                                    <%= address.zip %> 
                                                                    <% end %></h6>
          <%= link_to 'Edit', edit_contact_path, class: "card-link text-warning" %>
          <%= link_to 'Delete', contact_path, class: "card-link text-danger", method: :delete, 
                                              data: {confirm: "Do you wish to delete #{@contact.full_name}?"} %>
        </div>
      </div>
    </div>
  </div>
</div>