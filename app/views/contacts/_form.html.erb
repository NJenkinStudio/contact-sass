<%= form_with model: @contact do|f| %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputfirstname4">First name</label>
      <%= f.text_field :first_name, autofocus: true, autocomplete: 'first_name', class: 'form-control', placeholder: "First name" %>
    </div>
    <div class="form-group col-md-6">
      <label for="inputlastname4">Last name</label>
      <%= f.text_field :last_name, autocomplete: 'last_name', class: 'form-control', placeholder: "Last name" %>
    </div>

    <div class="form-group col-md-6">
      <label for="inputnumber4">Phone Number</label>
      <%= f.text_field :number, :maxlength => 12, 
                                        autocomplete: 'phone_number', 
                                        class: "form-control", 
                                        placeholder: "xxx-xxx-xxxx" %>
    </div>
    <div class="form-group col-md-6">
      <label for="inputlastname4">Birthday</label>
      <%= f.date_field :birthday, class: 'form-control', placeholder: "MM/DD/YYYY" %>
    </div>

    <div class="form-group col-md-12">
      <label for="inputEmail4">Email</label>
      <%= f.email_field :email, autocomplete: 'email', class: 'form-control', placeholder: "user@example.com" %>
    </div>
  </div>
  <%= f.fields_for :addresses do |af| %>
    <div id="hidden-address">
      <div class="form-group">
        <label for="inputAddress1">Address</label>
        <%= af.text_field :address1, autocomplete: 'address', class: 'form-control', placeholder: "1221 Your St" %>
      </div>
      <div class="form-group">
        <label for="inputAddress2">Address 2</label>
        <%= af.text_field :address2, class: 'form-control', placeholder: "Apt, Studio, or Floor" %>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputCity">City</label>
          <%= af.text_field :city, class: 'form-control', placeholder: "City Name" %>
        </div>
        <div class="form-group col-md-4">
          <label for="inputState">State</label>
          <%= af.select :state,  Address::STATES.collect {|s| [ s[:value], s[:key] ] },
                                                          { include_blank: true }, 
                                                          {class: 'form-control', required: true} %>
        </div>
        <div class="form-group col-md-2">
          <label for="inputZip">Zip</label>
          <%= af.text_field :zip, :maxlength => 5, class: "form-control", placeholder: "12345" %>
        </div>
      </div>
      <script type="text/javascript">
      $(document).ready(function(){
      window.alert("test");
      })
      </script>
    </div>
    <button type="button" id="clone_btn" class="btn btn-primary">Clone</button>
  <% end %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.submit 'Create Contact', class: "btn btn-secondary" %>
<% end %>